{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "businessUnitTag": {
      "type": "string",
      "metadata": {
          "description": "Tag value"
      }
    },
    "ProjectNameTag": {
      "type": "string",
      "metadata": {
        "description": "(Required)Project Name"
      }
    },
    "LOBTag": {
      "type": "string",
      "metadata": {
        "description": "(Required)LOB"
      }
    },
    "COBTag": {
      "type": "string",
      "metadata": {
        "description": "(Required)COB"
      }
    },
    "SoldToCodeTag": {
      "type": "string",
      "metadata": {
        "description": "(Required)SoldToCode"
      }
    },
    "IsDREnabledTag": {
      "type": "bool",
      "metadata": {
        "description": "(Required)If Application is DR enabled"
      }
    },
    "blobConnectionName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL connection being created."
      }
    },
    "blobAccountName": {
      "type": "string",
      "metadata": {
        "description": "blobAccountName"
      }
    },
    "blobAccessKey": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL database."
      }
    },
    "objectId": {
      "type": "string",
      "metadata": {
        "description": "The logic appe objectId."
      }
    },
    "tenantId": {
      "type": "string",
      "metadata": {
        "description": "The tenant ID"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "connectionsName": {
      "type": "string",
      "metadata": {
        "description": "connactions name"
      }
    }
  },
  "variables": {
    "singleQuote": "'"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2018-07-01-preview",
      "location": "[parameters('location')]",
      "tags": {
          "business-unit": "[parameters('businessUnitTag')]"
      },
      "name": "[parameters('blobConnectionName')]",
      "kind": "V2",
      "properties": {
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureblob')]"
        },
        "displayName": "blob_connection",
        "parameterValueSet": {
            "name": "keyBasedAuth",
            "values": {
                "accountName": {
                    "value": "[parameters('blobAccountName')]"
                },
                "accessKey": {
                    "value": "[parameters('blobAccessKey')]"
                }
            }
        }
      }
    },
    {
      "type": "Microsoft.Web/connections/accessPolicies",
      "apiVersion": "2016-06-01",
      "name": "[parameters('connectionsName')]",
      "location": "[parameters('location')]",
      "tags": {
        "business-unit": "[parameters('businessUnitTag')]"
      },
      "dependsOn": [
          "[resourceId('Microsoft.Web/connections',parameters('blobConnectionName'))]"
      ],
      "properties": {
          "principal": {
            "type": "ActiveDirectory",
            "identity": {
                "objectId": "[parameters('objectId')]",
                "tenantId": "[parameters('tenantId')]"
            }
          }
      }
    }

  ]
}
